<body>

    <!-- navbar -->
    <%- include('./partials/navbar.ejs') %>

        <section class="hero">
            <div class="container">
                <h1 class="page-title">Latest Blog Posts</h1>
                <p class="page-subtitle">Insights, updates, and thoughts from my world</p>
            </div>
